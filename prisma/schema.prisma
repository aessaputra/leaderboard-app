generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Competition {
  UCL
  EUROPA
}

model User {
  id        String        @id @default(cuid())
  name      String
  email     String        @unique
  password  String
  role      Role          @default(USER)
  approved  Boolean       @default(false)
  trophies  TrophyAward[]
  gallery   GalleryImage[]
  createdAt DateTime      @default(now())
}

model TrophyAward {
   id          String       @id @default(cuid())
  userId      String
  competition Competition
  createdBy   String
  createdAt   DateTime     @default(now())

  approved    Boolean      @default(false)

  user        User         @relation(fields: [userId], references: [id])
}

model GalleryImage {
  id          String   @id @default(cuid())
  uploaderId  String
  url         String
  displayUrl  String
  thumbUrl    String?
  deleteUrl   String?
  caption     String?   @db.Text
  width       Int?
  height      Int?
  size        Int?
  expiresAt   DateTime
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  uploader    User      @relation(fields: [uploaderId], references: [id])

  @@index([createdAt, expiresAt])
  @@index([expiresAt])
  @@index([deletedAt])
}
